{
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "globals": {
    "assert": true,
    "expect": true,
    "match": true,
    "mount": true,
    "shallow": true,
    "spy": true,
    "stub": true,
    "System": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "eol-last": ["error", "always"],
    "indent": ["error", 4, { "SwitchCase": 1 }],
    "linebreak-style": ["error", "unix"],
    "no-unused-vars": ["error"],
    "max-len": ["error", 125, { "ignoreComments": true }],
    "quote-props": ["error", "consistent-as-needed"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
